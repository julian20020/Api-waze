{
  "compilerOptions": {
    "target": "ES2020",                    
    "module": "commonjs",                 
    "rootDir": "src",                     
    "outDir": "dist",                     
    "strict": true,                       
    "esModuleInterop": true,              
    "skipLibCheck": true,                 
    "forceConsistentCasingInFileNames": true,

    // Necesarios para TypeORM y decoradores
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],                
  "exclude": ["node_modules"]             
}
